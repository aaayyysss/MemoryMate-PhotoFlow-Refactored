+    def _dedup_paths(self, paths):
+        """De-duplicate candidate paths while preserving order.
+
+        Rationale: scanning multiple roots, symlink-like mounts, or case-insensitive paths can
+        yield duplicates, which wastes IO and can create subtle UI issues (double counts,
+        duplicate DB writes).
+        """
+        seen = set()
+        out = []
+        for p in paths or []:
+            try:
+                key = os.path.normcase(str(p.resolve()))
+            except Exception:
+                key = os.path.normcase(str(p))
+            if key in seen:
+                continue
+            seen.add(key)
+            out.append(p)
+        return out
